---

---
[
  {% for focal in site.foclair %}
    {

      "title"    : "{{ focal.title | escape }}",
      "url"      : "{{ site.baseurl }}{{ focal.url }}",
      "category" : "{{ focal.category }}",
      "tags"     : "{{ focal.tags | join: ', ' }}",
      "date"     : "{{ focal.date }}",
      "content"  : {{ focal.content | strip_html | strip_newlines | jsonify }}

    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
